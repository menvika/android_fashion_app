<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cherry_back"
    tools:context=".Registr2">

    <TextView
        android:id="@+id/text_login"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:text="Придумайте логин:"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15pt"
        android:layout_marginRight="15pt"
        android:textSize="30dp"
        android:layout_marginTop="80pt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/login"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="30dp"
        android:textAlignment="center"
        android:inputType="text"
        android:layout_marginLeft="15pt"
        android:textStyle="bold"
        android:layout_marginRight="15pt"
        app:layout_constraintTop_toBottomOf="@+id/text_login"
        app:layout_constraintBottom_toTopOf="@+id/text_password"/>

    <TextView
        android:id="@+id/text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginLeft="15pt"
        android:layout_marginRight="15pt"
        android:text="Придумайте пароль:"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/login"
        app:layout_constraintBottom_toTopOf="@+id/password"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:layout_marginLeft="15pt"
        android:layout_marginRight="15pt"
        app:layout_constraintTop_toBottomOf="@+id/text_password"
        app:layout_constraintBottom_toTopOf="@+id/button_zareg"/>

    <Button
        android:id="@+id/button_zareg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Войти"
        android:onClick="next"
        android:textSize="20dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80pt"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"/>

</androidx.constraintlayout.widget.ConstraintLayout>