<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".User"
    android:background="@drawable/cherry_back">



    <Button
        android:id="@+id/button_voity"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:onClick="voity"
        android:text="Войти в аккаунт"
        android:textSize="20dp"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginTop="320dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_zareg" />

    <Button
        android:id="@+id/button_zareg"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:onClick="zareg"
        android:textSize="20dp"
        android:text="Зарегистрироваться"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginBottom="100pt"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/button_voity"
        app:layout_constraintBottom_toTopOf="@+id/panel1" />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/panel1"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/button_zareg"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageView
            android:id="@+id/linia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="parent"
            app:srcCompat="@drawable/newline2" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>